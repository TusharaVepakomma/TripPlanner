<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewDealPlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Place"
        android:layout_marginLeft="66dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewDealDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Duration"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="131dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textViewDealCostPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost: $"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="66dp" />

    <TextView
        android:id="@+id/textViewDealCostValuePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewDealCostPlace"
        android:layout_marginLeft="25dp" />

    <Button
        android:id="@+id/buttonDealsMap"
        android:layout_width="75dp"
        android:layout_height="39dp"
        android:text="View Map"
        android:layout_marginLeft="266dp"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="279dp" />
</android.support.constraint.ConstraintLayout>