<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.dealsapp.DealsActivity">
    
    <TextView
        android:id="@+id/textViewFilterRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter your Result:"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp" />

    <SeekBar
        android:id="@+id/seekBarBudget"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="206dp"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="43dp"
        android:max="10"
        android:progress="5"
        app:layout_constraintLeft_toRightOf="@+id/textViewBudget"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSeekBarVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ "
        android:layout_marginLeft="292dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp" />

    <TextView
        android:id="@+id/textViewPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="76dp" />

    <EditText
        android:id="@+id/addNumber"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="86dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:textAllCaps="false"
        android:layout_marginLeft="260dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/deals"
        android:layout_width="371dp"
        android:layout_height="207dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="138dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/buttonDealsAddToTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Trips"
        android:layout_marginLeft="47dp"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="447dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAddToWishList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Wishlist"
        android:textAllCaps="false"
        android:layout_marginLeft="222dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="447dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
